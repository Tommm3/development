<Button>:
    font_size: self.height/2

<MyGrid>
    output: output
    result: result

    GridLayout:
        cols: 1
        size: root.width, root.height


        TextInput:
            id: result
            multiline:True
            size_hint: 0.2, 0.2

        TextInput:
            id: output
            multiline:True
            size_hint: 0.2, 0.2

        GridLayout:
            cols:3

            Button:
                text: ""
                on_press: root.btnBracket()

            Button:
                text: "C"
                on_press: root.btnCancel()

            Button:
                text: "Backspace"
                on_press: root.btnBackspace()

            Button:
                text: "="
                on_press: root.btnResult()

            Button:
                text: "**"
                on_press: root.btnPower()

            Button:
                text: "/"
                on_press: root.btnDivide()

            Button:
                text: "+"
                on_press: root.btnPlus()

            Button:
                text: "-"
                on_press: root.btnMinus()

            Button:
                text: "*"
                on_press: root.btnMultiply()

            Button:
                text: "1"
                on_press: root.btn1()

            Button:
                text: "2"
                on_press: root.btn2()

            Button:
                text: "3"
                on_press: root.btn3()

            Button:
                text: "4"
                on_press: root.btn4()

            Button:
                text: "5"
                on_press: root.btn5()

            Button:
                text: "6"
                on_press: root.btn6()

            Button:
                text: "7"
                on_press: root.btn7()

            Button:
                text: "8"
                on_press: root.btn8()

            Button:
                text: "9"
                on_press: root.btn9()

            Button:
                text: "+/-"
                on_press: root.btnNeg()

            Button:
                text: "0"
                on_press: root.btn0()

            Button:
                text: ","
                on_press: root.btnPoint()
