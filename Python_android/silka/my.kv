<MySilka>
    weekday : weekday
    exercises : exercises
    last_weight : last_weight
    new_weight1 :

    GridLayout:
        cols: 1
        size: root.width, root.height

        Label:
            id : weekday
            font_size : 50
            center_x : root.width / 2
            top: root.top - 10
            text:str(weekday)
            size_hint: 0.15, 0.15

        GridLayout:
            cols:3

            Label:
                font_size : 16
                id : exercises
                halign: 'right'
                text:str(exercises)

            Label:
                font_size : 16
                id : last_weight
                text:str(root.last_weight)
                size_hint: 0.15, 0.15

            GridLayout:
                TextInput:
                    id: new_weight1
                    multiline:False
                TextInput:
                    id: new_weight2
                    multiline:False
                TextInput:
                    id: new_weight3
                    multiline:False
                TextInput:
                    id: new_weight4
                    multiline:False
                TextInput:
                    id: new_weight5
                    multiline:False
                TextInput:
                    id: new_weight6
                    multiline:False
                TextInput:
                    id: new_weight7
                    multiline:False
                TextInput:
                    id: new_weight8
                    multiline:False
                TextInput:
                    id: new_weight9
                    multiline:False
