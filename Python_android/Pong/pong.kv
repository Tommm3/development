<PongBall>:
    size : 50,50
    canvas:
        Ellipse:
            pos : self.pos
            size: self.size

<DynamicPaddle>:
    canvas:
        Line:
            width : 10
            points : [self.x, self.y, self.width, self.height]

<PongGame>:
    ball : pong_ball
    paddle: dynamic_paddle

    Label:
        font_size : 70
        center_x : root.width / 4
        top: root.top - 50

    Label:
        font_size : 70
        center_x : root.width * 3/4
        top: root.top - 50

    PongBall:
        id: pong_ball
        center : self.parent.center

    DynamicPaddle:
        id : dynamic_paddle
